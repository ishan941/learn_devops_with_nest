pipeline {
    agent any

    tools {
        nodejs 'NodeJS_14' // The name you gave NodeJS installation in Jenkins
    }

    stages {
        stage('Install') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
        stage('Test') {
            steps {
                sh 'npm run test'
            }
        }
    }
}
